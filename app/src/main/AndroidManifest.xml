<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marcoceron.finanzasfamiliares">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Family Budget"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ctas_add"
            android:label="Agregar Cuenta"
            android:parentActivityName=".cuentas"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.cuentas" />
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".cuentas"
            android:label="@string/title_activity_lstctas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.MainActivity" />
        </activity>
        <activity
            android:name=".fondos"
            android:label="@string/title_activity_lst_fondos"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.MainActivity" />
        </activity>
        <activity
            android:name=".frm_fondos_add"
            android:label="@string/title_activity_frm_fondos_add"
            android:parentActivityName=".fondos"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.fondos" />
        </activity>
        <activity
            android:name=".categorias"
            android:label="@string/title_activity_categorias"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.MainActivity" />
        </activity>
        <activity
            android:name=".frm_cat_add"
            android:label="@string/title_activity_frm_car_add"
            android:parentActivityName=".categorias"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.marcoceron.finanzasfamiliares.categorias" />
        </activity>
    </application>

</manifest>
